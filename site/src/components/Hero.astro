---
// Static hero — zero client JS
---

<section class="relative overflow-hidden px-4 pt-16 pb-20 sm:px-6 lg:px-8">
  <!-- Subtle grid background -->
  <div class="pointer-events-none absolute inset-0 opacity-[0.03]"
    style="background-image: linear-gradient(var(--color-terminal-green) 1px, transparent 1px), linear-gradient(90deg, var(--color-terminal-green) 1px, transparent 1px); background-size: 40px 40px;">
  </div>

  <div class="relative mx-auto max-w-4xl text-center">
    <!-- Terminal prompt -->
    <div class="mb-6 inline-block rounded-lg border border-terminal-border bg-terminal-surface px-4 py-2 font-[family-name:var(--font-mono)] text-sm text-terminal-dim">
      <span class="text-terminal-green">$</span> termux-tools <span class="text-terminal-amber">v1.7.0</span>
    </div>

    <h1 class="mb-4 font-[family-name:var(--font-mono)] text-4xl font-bold tracking-tight text-terminal-bright sm:text-5xl lg:text-6xl">
      termux<span class="text-terminal-green">-</span>tools
    </h1>

    <p class="mx-auto mb-2 max-w-2xl text-xl text-terminal-text sm:text-2xl">
      Turn your phone into a persistent dev server
    </p>

    <p class="mb-8 text-sm text-terminal-dim">
      Shell / JS / TS / Python &middot; MIT Licensed &middot; ARM64
    </p>

    <!-- CTAs -->
    <div class="flex flex-col items-center justify-center gap-3 sm:flex-row">
      <a href="https://github.com/tribixbite/termux-tools"
        class="inline-flex items-center gap-2 rounded-lg border border-terminal-green bg-terminal-green/10 px-6 py-3 font-[family-name:var(--font-mono)] text-sm font-medium text-terminal-green transition-colors hover:bg-terminal-green/20"
        target="_blank" rel="noopener">
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        GitHub
      </a>
      <a href="https://github.com/tribixbite/termux-tools/releases"
        class="inline-flex items-center gap-2 rounded-lg border border-terminal-border px-6 py-3 font-[family-name:var(--font-mono)] text-sm font-medium text-terminal-text transition-colors hover:border-terminal-dim hover:text-terminal-bright"
        target="_blank" rel="noopener">
        Releases
      </a>
    </div>

    <!-- Terminal mockup -->
    <div class="mx-auto mt-12 max-w-lg overflow-hidden rounded-lg border border-terminal-border bg-terminal-surface">
      <!-- Title bar -->
      <div class="flex items-center gap-2 border-b border-terminal-border px-4 py-2">
        <span class="h-3 w-3 rounded-full bg-red-500/60"></span>
        <span class="h-3 w-3 rounded-full bg-yellow-500/60"></span>
        <span class="h-3 w-3 rounded-full bg-green-500/60"></span>
        <span class="ml-2 font-[family-name:var(--font-mono)] text-xs text-terminal-dim">bash — termux</span>
      </div>
      <!-- Terminal content -->
      <div class="p-4 font-[family-name:var(--font-mono)] text-sm leading-relaxed">
        <div class="text-terminal-dim">~ $<span class="text-terminal-bright"> tm clev</span></div>
        <div class="mt-1 text-terminal-dim">Switching to <span class="text-terminal-green">cleverkeys</span> ...</div>
        <div class="mt-2 text-terminal-dim">~ $<span class="text-terminal-bright"> tmgo un</span></div>
        <div class="mt-1 text-terminal-dim">Sent '<span class="text-terminal-amber">go</span>' → <span class="text-terminal-green">Unexpected-Keyboard</span></div>
        <div class="mt-2 text-terminal-dim">~ $<span class="text-terminal-bright"> tmbs</span></div>
        <div class="mt-1 text-terminal-green">cleverkeys</span>: 1 windows (attached)</div>
        <div class="text-terminal-text">craftmatic: 1 windows</div>
        <div class="text-terminal-text">for-android: 1 windows</div>
        <div class="text-terminal-text">termux-tools: 1 windows</div>
        <div class="mt-2 text-terminal-dim">~ $<span class="ml-1 inline-block h-4 w-2 animate-pulse bg-terminal-green"></span></div>
      </div>
    </div>
  </div>
</section>
